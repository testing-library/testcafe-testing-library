    "testcafe": ">=2.0.0"
  },
  "devDependencies": {
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "kcd-scripts": "^12.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "semantic-release": "^20.0.2",
    "testcafe": ">=2.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
